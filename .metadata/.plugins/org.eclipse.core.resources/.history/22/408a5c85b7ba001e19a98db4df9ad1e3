package auriculares;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.List;

public class AuricularAppV02 {

    public static void main(String[] args) {
        List<Auricular> listaAuriculares = new ArrayList<>();

        // Obtener la ruta del paquete
        String packageName = AuricularApp.class.getPackage().getName();
        String filePath = packageName.replace(".", "/") + "/auriculares.txt";

        try (InputStream inputStream = AuricularApp.class.getClassLoader().getResourceAsStream(filePath);
             BufferedReader leertxt = new BufferedReader(new InputStreamReader(inputStream))) {

            String linea = leertxt.readLine();

            while (linea != null) {
                String[] partes = linea.split(";");
                if (partes.length == 4) {
                    Auricular auricular = new Auricular(partes[0], partes[1], Double.parseDouble(partes[2]), Integer.parseInt(partes[3]));
                    listaAuriculares.add(auricular);
                } else {
                    System.out.println("Formato incorrecto en la l√≠nea: " + linea);
                }

                linea = leertxt.readLine();
            }

        } catch (IOException e) {
            e.printStackTrace();
        }

        // Imprimir la lista de auriculares
        for (Auricular auricular : listaAuriculares) {
            System.out.println(auricular.toString());
        }
    }
}